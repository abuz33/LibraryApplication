
@{
    ViewBag.Title = "Add a new Book";
}

<h2>ADD A NEW BOOK</h2>

<form class="form-horizontal">

    <div class="form-group">
        <label class="col-sm-12">Add a Category</label>
        <div class="col-sm-10">
            <select id="categories" class="form-control">
                @foreach (var ctg in ViewBag.Categories)
                {
                    <option data-id="@ctg.Id">@ctg.CategoryName</option>
                }
            </select>
        </div>
        <div class="col-sm-2">
            <input type="button" class="addCat btn btn-block btn-success" value="Add" />
        </div>
        <div id="addedCategories" class="form-group">
            <label class="col-md-12">Categories</label>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-12">Choose a Writer</label>
        <div class="col-sm-12">
            <select id="writer" class="form-control">
                @foreach (var wrt in ViewBag.Writers)
                {
                    <option data-id="@wrt.Id">@wrt.WriterName</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-12">Book Name</label>
        <div class="col-md-12">
            <input id="bookName" type="text" class="form-control" placeholder="Enter the book name">
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-12">Book Quantity</label>
        <div class="col-md-12">
            <input id="bookQuantity" type="text" class="form-control" placeholder="Enter the book quantity">
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-12">Order Number</label>
        <div class="col-md-12">
            <input id="orderNumber" type="text" class="form-control" placeholder="Enter the book order number">
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            <input type="button" id="addBook" class="btn btn-block btn-info" value="Add a New Book" />
        </div>
    </div>
</form>

